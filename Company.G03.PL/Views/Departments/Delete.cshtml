@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Department</h1>

<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="Code" class="col-form-label"></label>
        <input readonly asp-for="Code" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input readonly asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input readonly asp-for="DateOfCreation" class="form-control" />
    </div>
    <br />
    <input type="submit" value="Delete" class="btn btn-danger"/>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>


